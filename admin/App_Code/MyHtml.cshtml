				<input type="reset" value="重新輸入" class="btn Gray" />
			}
			<input type="button" value="回上頁" class="btn Pink" onclick="back()" />
		</div>
	}
	else
	{
		<div class="bottom_bar">
			@if (isEdit)
			{
				if (Isback)
				{
					<input type="submit" value="送審" class="btn" id="audit" />
				}
				else
				{
					<input type="submit" value="存檔" class="btn" id="save" />
				}
				<input type="reset" value="重新輸入" class="btn Gray" />
			}
			<input type="button" value="回上頁" class="btn Pink" onclick="back()" />
		</div>
	}
}


