@*編輯頁頁頭紅字提示訊息*@
@helper RedP(string msg = null, string add_class = null)
{
	<p class="colortxt_red @(string.IsNullOrEmpty(add_class) ? "" : add_class)">
		@(string.IsNullOrEmpty(msg) ? Resource.Required : msg)
	</p>
}

@*編輯頁欄位紅字提示訊息*@
@helper RedSpan(string msg = null, string add_class = null)
{
	<span class="colortxt_red stst @(string.IsNullOrEmpty(add_class) ? "" : add_class)">
		@(string.IsNullOrEmpty(msg) ? "*" : msg)
	</span>
}
