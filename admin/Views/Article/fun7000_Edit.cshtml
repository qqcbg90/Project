                @Html.EditorValidationFor(m => m.PH0)
            </div>
        </div>
        <div>
            <label>
                英文回答
            </label>
            <div>
                @Html.EditorValidationFor(m => m.PH1)
            </div>
        </div>
        <div>
            @Html.ValidationSummary(true)
        </div>
